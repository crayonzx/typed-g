{
  "compilerOptions": {
      "outDir": "./lib",
      "module": "commonjs",
      "lib": ["es6", "dom"],
      // "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      // "noImplicitAny": true,
      "strictNullChecks": true,
      "target": "es5",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
  },
  "include": ["./ts-src/**/*", "./types/**/*"]
}
